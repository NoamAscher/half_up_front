<article class="milestone">


  <%= button_to 'X', '/jobs/'+ @job.id.to_s + '/milestones/' + milestone.id.to_s + '/', class: 'delete-milestone-btn', method: :delete, data: { confirm: "Are you sure?" }, remote: true %>
<dl data-milestone-id="<%= milestone.id %>">
  <dt>Name</dt>
  <dd class="name freelancer-editable" data-update-field="name"><%= milestone.name %></dd>

  <dt>Budget</dt>
  <dd contenteditable="true">Percent:</dd>
  <span>
    <%= link_to '#' do %>
      <%= image_tag 'crazy_green_up.png', id: 'arrow', alt: 'up arrow', height: '25px', width: '25px' %>
    <% end %>
     (25%)
    <%= link_to '#' do %>
      <%= image_tag 'crazy_green_down.png', id: 'arrow', alt: 'down arrow', height: '25px', width: '25px' %>
    <% end %>
  </span>
  <dd contenteditable="true">Amount:</dd>
  <span>($2424)</span>

  <dt>Start Date</dt>
  <dd class="start-date freelancer-editable" data-update-field="start-date"><%= milestone.start_date %></dd>
  <dt>End Date</dt>
  <dd class="end-date freelancer-editable" data-update-field="end-date"><%= milestone.end_date %></dd>
  <dt>Summary of Requirements</dt>
  <dd class="summary freelancer-editable" data-update-field="summary"><%= milestone.requirements_summary %></dd>
  </dl>
  <button data-milestone-id="<%= milestone.id %>">Save</button>
</article>
