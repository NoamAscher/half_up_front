
<%= form_for @user, url: user_path do |f| %>

  <section class="edit_header">
    <div class="editprofilecont">

      <div class="editusername">
        <h1 id="edit-user-full-name"><%= f.text_field :first_name %> <%= f.text_field :last_name %></h1>
      </div>

      <div class="edit-userlocation">
        <i class="fa fa-map-marker"></i>  <%= f.text_field :country %><%= f.text_field :city %> <%= f.text_field :province %>
      </div>

      <div class=edit-profileemail>
        <i class="fa fa-envelope"></i> <%= f.text_field :email %>
      </div>

      <div class="edit-user">
       <i class="fa fa-user"></i> <%= f.select :user_type, [['Freelancer', 'Freelancer'], ['Employer', 'Employer']]%>
      </div>

      <div class="edit-usd">
        <i class="fa fa-usd"></i> <%= f.number_field :hourly_rate %>
      </div>

      <div class="edit-github">
       <i id="edit_github" class="fa fa-github"></i> <%= f.url_field :git %>
      </div>

      <div class="edit-linkedin">
       <i id="edit_linkedin" class="fa fa-linkedin"></i> <%= f.url_field :linked_in %>
      </div>
  </div>

 </section>

      <section class="summary">

        <div class="summary">
          <h4 class="edit_summary">Summary: </h4> <%= f.text_area :summary, size: "100 x 10" %>
        </div>

      </section>

    <!--</div>
  </section> -->

  <div class="edit_submit">
   <%= f.submit "Save Changes" %>
  </div>

<% end %>

