<% if current_user.user_type == 'Employer' && @user.user_type == 'Freelancer' %>
  <h2 class="sidebar_flash">Browsing Freelancer Page...</h2>
  <div class ="client_sidebar">
    <%= image_tag 'employer.png', id: "sidebar_profile_photo", alt: "sidebar_profile_photo", height: '180px' %>
    <br><br><br>
    <%= button_to "Initiate Job with #{@user.first_name}" , "/jobs/" + @user.id.to_s + "/", :controller => "jobs", :action => "create", form_class: "btn btn-lg btn-success left", :class => "btn btn-lg btn-success left", :method => :post %>
  </div>
<section class="container center-block viewing">
<% else %>
<section class="container center-block">
<% end %>
  <script>
    document.godHelpMe_allowed_to_edit = <%=@allowed_to_edit%>;
  </script>
  <br>
  <br>
  <section class="header">
   <% if @user.user_type == 'Freelancer' %>
    <div class="profilephoto">
      <%= image_tag 'freelancer.png', id: "profile_photo", alt: "profile_photo", height: '270px' %>
    </div>
    <% elsif @user.user_type == 'Employer' %>
    <div class="profilephoto">
      <%= image_tag 'employer.png', id: "profile_photo", alt: "profile_photo", height: '270px' %>
    </div>
    <% else %>
    <div class="profilephoto">
      <%= image_tag 'profilePlaceholder.png', id: "profile_photo", alt: "profile_photo", height: '270px' %>
    </div>
    <% end %>

    <div class="username">
      <h1 id="user-full-name"> <%= @user.first_name %> <%= @user.last_name %></h1>
    </div>

    <div class="userlocation">
      <i class="fa fa-map-marker"></i>
      <%= @user.city %> <%= @user.province %> <%= @user.country %>
    </div>

    <div class=profileemail>
      <i class="fa fa-envelope"></i> <%= @user.email %>
    </div>

    <% if @user.user_type == 'Freelancer' %>
        <div class="user">
          <i class="fa fa-user"></i> <%= @user.user_type %>
        </div>

    <% end %>


    <% if @user.user_type == 'Freelancer' %>
        <div class="user">
          <i class="fa fa-usd"></i> <%= @user.hourly_rate %>
        </div>
    <% end %>

    <div class="github">
      <i class="fa fa-github"></i> <%= @user.git %>
    </div>

    <div class="linkedin">
      <i class="fa fa-linkedin"></i> <%= @user.linked_in %>
    </div>


    <% if current_user.id == @user.id %>
        <div class="editprofile">
          <%= link_to 'Edit Profile', edit_user_path(@user) %>
        </div>

    <% end %>


  </section>


  <section class="summary">

    <div class="summary">
      <h4 class="bio">Bio: </h4> <%= @user.summary %>
    </div>

  <% if current_user.user_type == 'Employer' %>
    <br><br><br><br><br><br>
    <h3> Freelancer Profile(s) Available to View: </h3>
    <%= button_to "#{@user.first_name}", "/users/" + @user.id.to_s + "/", :controller => "users", :action => "create", form_class: "btn btn-lg btn-success", :class => "btn btn-lg btn-success", :method => :get %>

  <% end %>


  </section>




</section>

